<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="10dp"
        android:left="50dp"
        android:bottom="-10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/gold_theme"/>
            <size android:height="@dimen/MarginSpaceXXL" android:width="@dimen/_110sdp" />
            <corners
                android:topLeftRadius="@dimen/MarginSpaceS"
                android:bottomLeftRadius="@dimen/MarginSpaceS" />
        </shape>
    </item>
    <item
        android:right="100dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_theme"/>
            <size android:height="@dimen/MarginSpaceXXL" android:width="@dimen/_60sdp" />
            <corners
                android:topRightRadius="@dimen/MarginSpaceS"
                android:bottomRightRadius="@dimen/MarginSpaceS" />
        </shape>
    </item>

</layer-list>