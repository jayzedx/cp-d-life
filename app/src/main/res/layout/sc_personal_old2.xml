        <RelativeLayout
            android:paddingTop="@dimen/PaddingSpaceXL"
            android:paddingRight="@dimen/PaddingSpaceXXL"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvSelectUnit"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/blue_theme"
                android:text="STEP"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/MarginSpaceL"
                android:layout_marginLeft="@dimen/MarginSpace4XL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvUnSelectUnit"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/blue_theme"
                android:text="/km"
                android:layout_toRightOf="@+id/tvSelectUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imvCalendar"
                android:src="@drawable/ic_calendar"
                android:layout_below="@+id/tvSelectUnit"
                android:layout_alignLeft="@+id/tvSelectUnit"
                android:layout_marginRight="@dimen/MarginSpaceS"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/tvSelectDate"
                style="@style/EditTextPurpleStyle"
                android:textAlignment="center"
                android:layout_toRightOf="@+id/imvCalendar"
                android:layout_alignRight="@+id/tvSelectUnitShow"
                android:hint="03 May 2018"
                android:maxLines="1"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <ImageView
                android:id="@+id/imvWalking"
                android:src="@drawable/ic_walk"
                android:layout_below="@+id/imvCalendar"
                android:layout_alignLeft="@+id/imvCalendar"
                android:layout_marginRight="@dimen/MarginSpaceS"
                android:layout_marginTop="@dimen/MarginSpaceL"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <EditText
                android:id="@+id/edtDistance"
                style="@style/EditTextPurpleStyle"
                android:layout_toRightOf="@+id/imvWalking"
                android:layout_toLeftOf="@+id/tvSelectUnitShow"
                android:layout_alignLeft="@+id/tvSelectDate"
                android:layout_below="@+id/tvSelectDate"
                android:hint="1.2"
                android:maxLines="1"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvSelectUnitShow"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/blue_theme"
                android:text="step"
                android:layout_toLeftOf="@+id/imvSelectImage"
                android:layout_marginRight="@dimen/MarginSpace"
                android:layout_alignBaseline="@+id/edtDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imvSelectImage"
                android:src="@drawable/ic_add_image"
                android:layout_alignTop="@+id/tvUnSelectUnit"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_120sdp" />

            <Button
                android:id="@+id/btnSignIn"
                style="@style/TextTitle14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtDistance"
                android:layout_marginTop="@dimen/MarginSpaceXXL"
                android:layout_marginBottom="@dimen/MarginSpaceL"
                android:background="@drawable/btn_send_left"
                android:text="@string/personal_send"
                android:paddingRight="@dimen/_20sdp" />

        </RelativeLayout>

    </LinearLayout>
