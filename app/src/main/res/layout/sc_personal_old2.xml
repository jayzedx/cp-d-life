                style="@style/TextTint10"
                android:text="Record Activity" />
        </RelativeLayout>




        <!--Record Activity-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp">

            <android.support.constraint.ConstraintLayout
                android:visibility="visible"
                android:id="@+id/viewDistanceContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/separatorTop2"
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="0dp"
                    android:background="@color/bg_head"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/viewStepBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/separatorTop2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvStepChallenge"
                        style="@style/TextSub22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/tvStepChallengeTotal"
                        android:text="12,345"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tvStepChallengeTotal"
                        style="@style/TextSub12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvStepChallenge"
                        android:layout_centerHorizontal="true"
                        android:text="/ 41,000,000"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tvStepUnit"
                        style="@style/TextHead12"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tvStepChallengeTotal"
                        android:text="step"
                        android:layout_marginTop="@dimen/MarginSpace"
                        android:textAlignment="center" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/viewDistanceBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/viewStepBtn"
                    app:layout_constraintTop_toTopOf="parent">


                    <TextView
                        android:id="@+id/tvKmChallenge"
                        style="@style/TextSub22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/tvKmChallengeTotal"
                        android:text="9.4"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tvKmChallengeTotal"
                        style="@style/TextSub12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tvKmChallenge"
                        android:text="/ 1,360,000"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/tvKmUnit"
                        style="@style/TextHead12"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tvKmChallengeTotal"
                        android:text="km"
                        android:layout_marginTop="@dimen/MarginSpace"
                        android:textAlignment="center" />
                </RelativeLayout>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/viewDistanceContent2"
                android:alpha="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
