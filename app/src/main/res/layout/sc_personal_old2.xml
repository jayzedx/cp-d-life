                    android:textStyle="bold"
                    android:text="Step"
                    style="@style/TextHead12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/tvStepChallenge2"
                    app:layout_constraintTop_toTopOf="@+id/tvStepChallenge2" />
            </android.support.constraint.ConstraintLayout>






