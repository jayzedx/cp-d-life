<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue_theme"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/tvHeaderCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/MarginSpaceXL"
        android:textSize="@dimen/FontSizeXL"
        android:text="@string/otp_verify"
        android:textAlignment="center"
        android:textColor="@color/White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewHeader" />

    <TextView
        android:id="@+id/tvHeaderCaption2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/MarginSpace"
        android:text="@string/otp_verify_title"
        android:textAlignment="center"
        android:textColor="@color/White"
        style="@style/TextTitle12"
        app:layout_constraintEnd_toEndOf="@+id/tvHeaderCaption"
        app:layout_constraintStart_toStartOf="@+id/tvHeaderCaption"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderCaption" />

    <RelativeLayout
        android:id="@+id/viewPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/MarginSpace4XL"
        android:layout_marginTop="@dimen/MarginSpace4XL"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tvResendPinCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderCaption2">

        <EditText
            android:id="@+id/edtPin1"
            style="@style/EditTextPinCode"
            android:layout_width="42dp"
            android:layout_height="37dp"
            android:digits="1234567890"
            android:inputType="phone"
            android:maxLength="1"
            android:text="1" />

        <EditText
            android:id="@+id/edtPin2"
            style="@style/EditTextPinCode"
            android:layout_width="42dp"
            android:layout_height="37dp"
            android:layout_toEndOf="@+id/edtPin1"
            android:digits="1234567890"
            android:inputType="phone"
            android:maxLength="1"
            android:text="2" />

        <EditText
            android:id="@+id/edtPin3"
            style="@style/EditTextPinCode"
            android:layout_width="42dp"
            android:layout_height="37dp"
            android:layout_toEndOf="@+id/edtPin2"
            android:digits="1234567890"
            android:inputType="phone"
            android:maxLength="1"
            android:text="3" />

        <EditText
            android:id="@+id/edtPin4"
            style="@style/EditTextPinCode"
            android:layout_width="42dp"
            android:layout_height="37dp"
            android:layout_toEndOf="@+id/edtPin3"
            android:digits="1234567890"
            android:inputType="phone"
            android:maxLength="1"
            android:text="4" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tvResendPinCode"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginBottom="@dimen/MarginSpace3XL"
        android:layout_marginEnd="@dimen/MarginSpace"
        android:layout_marginStart="@dimen/MarginSpace"
        android:text="@string/otp_resend"
        android:textColor="@color/White"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />

</android.support.constraint.ConstraintLayout>