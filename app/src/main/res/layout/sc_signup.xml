    <!--Email-->
    <TextView
        android:id="@+id/tvTitleEmail"
        style="@style/TextTint12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/MarginSpaceS"
        android:text="@string/signup_email_tint"
        app:layout_constraintStart_toStartOf="@+id/tvTitleCompany"
        app:layout_constraintBottom_toTopOf="@+id/edtEmail" />


    <ImageView
        android:id="@+id/imvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/MarginSpace"
        android:src="@drawable/ic_email"
        app:layout_constraintBottom_toBottomOf="@+id/edtEmail"
        app:layout_constraintEnd_toStartOf="@+id/edtEmail"
        app:layout_constraintStart_toStartOf="@+id/tvTitleEmail"
        app:layout_constraintTop_toTopOf="@+id/edtEmail" />

    <EditText
        android:id="@+id/edtEmail"
        style="@style/EditTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/MarginSpace4XL"
        android:hint="@string/signup_email_tint"
        app:layout_constraintEnd_toEndOf="@+id/spnCompany"
        app:layout_constraintStart_toStartOf="@+id/spnCompany"
        app:layout_constraintTop_toBottomOf="@+id/viewInputAutoFill" />


    <TextView
        android:id="@+id/tvPolicy"
        style="@style/TextSub10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_policy"
        android:layout_marginTop="@dimen/MarginSpace"
        app:layout_constraintStart_toStartOf="@+id/imvEmail"
        app:layout_constraintTop_toBottomOf="@+id/cbAutoFill" />


    <CheckedTextView
        android:id="@+id/cbAgree"
        style="@style/TextSub12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center_vertical"
        android:text="@string/signup_agree"
        app:layout_constraintStart_toStartOf="@+id/tvPolicy"
        app:layout_constraintTop_toBottomOf="@+id/tvPolicy" />


    <CheckedTextView
        android:id="@+id/cbAutoFill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/MarginSpaceL"
        android:text="@string/signup_autofill"
        style="@style/TextSub12"
        android:gravity="center_vertical"
        android:checked="true"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        app:layout_constraintEnd_toEndOf="@+id/edtEmail"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail" />

    <Button
        android:id="@+id/btnSignUp"
        style="@style/TextTitle14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/MarginSpace8XL"
        android:background="@drawable/btn_create_right"
        android:text="@string/signup_create_account"
        android:paddingLeft="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tvBack"
        style="@style/TextTint12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/MarginSpaceXL"
        android:layout_marginStart="@dimen/MarginSpaceXL"
        android:text="@string/signup_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


