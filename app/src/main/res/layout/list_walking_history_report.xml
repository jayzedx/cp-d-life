<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewWalkingHistoryReport"
    android:paddingLeft="@dimen/PaddingSpaceXXL"
    android:paddingRight="@dimen/PaddingSpaceL"
    android:paddingTop="@dimen/PaddingSpaceL"
    android:paddingBottom="@dimen/PaddingSpaceL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imvWalkingHistory"
        android:src="@drawable/ic_walk"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/tvMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imvWalkingHistory"
        style="@style/TextTint12"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/MarginSpaceXL"
        android:text="January"
        />
    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imvWalkingHistory"
        style="@style/TextSub10"
        android:layout_marginTop="@dimen/MarginSpaceS"
        android:layout_below="@+id/tvMonth"
        android:layout_alignLeft="@+id/tvMonth"
        android:text="Weight : 75 kg  |  BMI : 23.7"
        />
    <TextView
        android:id="@+id/tvStatusBmi"
        android:textSize="@dimen/_12sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvMonth"
        android:text="Over weight"
        android:textStyle="bold"
        android:textColor="#F27181"
        />
    <TextView
        android:id="@+id/tvBmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextSub10"
        android:layout_alignBottom="@+id/tvDetail"
        android:layout_alignTop="@+id/tvDetail"
        android:layout_below="@id/tvStatusBmi"
        android:text="BMI :  27.5"
        android:layout_alignRight="@+id/tvStatusBmi"
        />


</RelativeLayout>