<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/viewImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/MarginSpace"
        android:layout_marginEnd="@dimen/MarginSpaceXL"
        android:layout_marginStart="@dimen/MarginSpaceXL"
        android:layout_marginTop="@dimen/MarginSpaceXL"
        android:background="@drawable/bg_add_picture"
        app:layout_constraintBottom_toTopOf="@+id/viewInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imvAdd"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imvPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_gallery" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imvAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/MarginSpaceXL"
        android:layout_marginTop="@dimen/MarginSpace"
        android:src="@drawable/ic_plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/viewInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewImage"
        android:layout_marginBottom="16dp"
        android:padding="@dimen/MarginSpaceXL"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imvCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edtSelectDate"
            android:layout_alignTop="@+id/edtSelectDate"
            android:layout_marginRight="@dimen/MarginSpaceS"
            android:src="@drawable/ic_calendar" />

        <EditText
            android:id="@+id/edtSelectDate"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imvCalendar"
            android:drawableRight="@drawable/ic_spinner"
            android:focusable="false"
            android:hint="03 May 2018"
            android:maxLines="1"
            android:paddingLeft="@dimen/_20sdp"
            android:textAlignment="textStart"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imvCalendar"
            android:layout_marginTop="@dimen/MarginSpace"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvWalking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/MarginSpaceS"
                android:src="@drawable/ic_walk" />

            <EditText
                android:id="@+id/edtDistance"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/MarginSpaceS"
                android:layout_weight="2.5"
                android:ems="10"
                android:hint="1.299999999999999"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:nextFocusDown="@+id/edtDistance1"
                android:paddingLeft="@dimen/_20sdp"
                android:textAlignment="textStart"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/tvStepSelectUnit"
                    style="@style/TextTint14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_step_selected"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvKmSelectUnit"
                    style="@style/TextTint12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tvStepSelectUnit"
                    android:layout_toRightOf="@id/tvStepSelectUnit"
                    android:text="@string/personal_unit_selected_default" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/viewInput"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imvBtnOk"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:background="@color/main_theme"
            android:padding="@dimen/PaddingSpace"
            android:src="@drawable/ic_correct" />

        <ImageButton
            android:id="@+id/imvBtnCancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:background="@color/red_theme"
            android:padding="@dimen/PaddingSpace"
            android:src="@drawable/ic_incorrect" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>