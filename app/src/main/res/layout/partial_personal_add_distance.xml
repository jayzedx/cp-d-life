<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/viewImage"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginEnd="@dimen/MarginSpaceXL"
        android:layout_marginStart="@dimen/MarginSpaceXL"
        android:layout_marginTop="@dimen/MarginSpaceXL"
        android:background="@drawable/bg_add_picture"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_gallery" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/MarginSpaceL"
        android:src="@drawable/ic_plus"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/viewImage"/>


    <RelativeLayout
        android:id="@+id/viewInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/MarginSpaceXL"
        android:layout_below="@+id/viewImage">

        <ImageView
            android:id="@+id/imvCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edtSelectDate"
            android:layout_alignTop="@+id/edtSelectDate"
            android:layout_marginRight="@dimen/MarginSpaceS"
            android:src="@drawable/ic_calendar" />

        <EditText
            android:id="@+id/edtSelectDate"
            android:focusable="false"
            style="@style/EditTextStyle"
            android:textSize="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imvCalendar"
            android:drawableRight="@drawable/ic_spinner"
            android:hint="03 May 2018"
            android:maxLines="1"
            android:paddingLeft="@dimen/_20sdp"
            android:textAlignment="textStart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imvCalendar"
            android:layout_marginTop="@dimen/MarginSpace"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvWalking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/MarginSpaceS"
                android:src="@drawable/ic_walk" />

            <EditText
                android:id="@+id/edtDistance"
                style="@style/EditTextStyle"
                android:textSize="@dimen/_14sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/MarginSpaceS"
                android:layout_weight="2.5"
                android:hint="1.299999999999999"
                android:maxLines="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:nextFocusDown="@+id/edtDistance1"
                android:paddingLeft="@dimen/_20sdp"
                android:textAlignment="textStart" />

            <RelativeLayout
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvStepSelectUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_step_selected"
                    style="@style/TextTint14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvKmSelectUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tvStepSelectUnit"
                    android:layout_alignBaseline="@+id/tvStepSelectUnit"
                    android:text="@string/personal_unit_selected_default"
                    style="@style/TextTint12" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/viewInput"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imgBtnOk"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/main_theme"
            android:src="@drawable/ic_correct" />
        <ImageButton
            android:id="@+id/imgBtnCancel"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/red_theme"
            android:src="@drawable/ic_incorrect" />

    </LinearLayout>


</RelativeLayout>