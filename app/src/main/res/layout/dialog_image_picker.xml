<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/imvPicker"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginBottom="@dimen/MarginSpace"
        android:layout_marginEnd="@dimen/MarginSpace"
        android:layout_marginStart="@dimen/MarginSpace"
        android:layout_marginTop="@dimen/MarginSpace"
        android:src="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/viewClose"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_close"
        app:layout_constraintBottom_toTopOf="@+id/imvPicker"
        app:layout_constraintEnd_toEndOf="@+id/imvPicker"
        app:layout_constraintStart_toEndOf="@+id/imvPicker"
        app:layout_constraintTop_toTopOf="@+id/imvPicker">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_incorrect" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>